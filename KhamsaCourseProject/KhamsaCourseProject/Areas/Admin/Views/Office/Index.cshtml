@model IEnumerable<KhamsaCourseProject.Areas.Admin.Models.Office>

@{
    ViewData["Title"] = "Ofis Xərcləri";
    Layout = "_AdminLayout";
}
<h1>Ofis Xərcləri</h1>
<h5>@ViewData["DateFrom"] və @ViewData["DateTo"] aralığındakı ofis xərcləri siyahısı</h5>

<p>
    <a asp-action="Create" asp-route-id="@ViewContext.HttpContext.Request.RouteValues["id"]">Yeni Xərc</a>
</p>
<form asp-action="Index" asp-controller="Office" asp-area="Admin" method="get">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <input type="text" value="@ViewData["DateFrom"] - @ViewData["DateTo"]" name="daterange" class="form-control" />
                        </div>
                        <div class="col-2">
                            <button class="btn btn-primary">Axtar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Xərcin Adı
            </th>
            <th>
                Məbləğ
            </th>
            <th>
                Əlavə Məlumat
            </th>
            <th>
                Tarix
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostDate)
                </td>
                <td>
                    @Html.ActionLink("Düzəliş", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $('input[name="daterange"]').daterangepicker({
            opens: 'right'
        }, function (start, end, label) {
            console.log("A new date selection was made: " + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD'));
        });
    </script>
}
