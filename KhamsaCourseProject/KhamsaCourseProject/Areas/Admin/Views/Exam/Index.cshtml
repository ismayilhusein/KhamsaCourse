@model IEnumerable<KhamsaCourseProject.Areas.Admin.Models.Exam>

@{
    ViewData["Title"] = "İmtahanlar";
    Layout = "_AdminLayout";
}
<h1>İmtahanlar</h1>
<h5>@ViewData["DateFrom"] və @ViewData["DateTo"] aralığındakı imtahanların siyahısı</h5>

<p>
    <a asp-action="Create" asp-route-id="@ViewContext.HttpContext.Request.RouteValues["id"]">Yeni İmtahan</a>
</p>
<form asp-action="Index" asp-controller="Exam" asp-area="Admin" method="get">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-2">      
                            <input type="text" value="@ViewData["DateFrom"] - @ViewData["DateTo"]" name="daterange" class="form-control" /> 
                        </div>
                        <div class="col-2">
                            <button class="btn btn-primary">Axtar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
               Ad
            </th>
            <th>
               Gəlir
            </th>
            <th>
                Əlavə Məlumat
            </th>
            <th>
                Tarix
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Benefit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExamDate)
            </td>
            <td>
                @Html.ActionLink("Düzəliş", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{ 
<script>
    $('input[name="daterange"]').daterangepicker({
        opens: 'right'
    }, function (start, end, label) {
        console.log("A new date selection was made: " + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD'));
    });
</script>
}
