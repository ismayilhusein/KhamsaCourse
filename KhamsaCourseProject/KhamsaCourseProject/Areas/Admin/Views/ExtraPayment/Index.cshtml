@model IEnumerable<KhamsaCourseProject.Areas.Admin.Models.ExtraPayment>

@{
    ViewData["Title"] = "Əlavə Gəlirlər";
    Layout = "_AdminLayout";
}
<h1>Əlavə Gəlirlər</h1>
<h5>@ViewData["DateFrom"] və @ViewData["DateTo"] aralığındakı əlavə gəlirlərin siyahısı</h5>

<p>
    <a class="btn btn-primary" asp-action="Create" asp-route-id="@ViewContext.HttpContext.Request.RouteValues["id"]">Yeni Əlavə Gəlir</a>
</p>
<form asp-action="Index" asp-controller="ExtraPayment" asp-area="Admin" method="get">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <input type="text" value="@ViewData["DateFrom"] - @ViewData["DateTo"]" name="daterange" class="form-control" />
                        </div>
                        <div class="col-2">
                            <button class="btn btn-primary">Axtar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<table class="table table-bordered">
    <thead style="background-color:cornflowerblue;color:white">
        <tr>
            <th>
                Əlavə Gəlir Səbəbi
            </th>
            <th>
                Miqdar
            </th>
            <th>
                Əlavə Məlumat
            </th>
            <th>
                Tarix
            </th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Benefit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BenefitDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="ExtraPayment" asp-area="Admin" asp-route-id="@item.Id" title="Duzəliş et"><img src="~/admin/img/edit3.png" width="20px" alt="Duzelis" /></a> |
                    <a asp-action="Delete" asp-controller="ExtraPayment" asp-area="Admin" asp-route-id="@item.Id" title="Sil"><img src="~/admin/img/delete2.png" width="20px" alt="Sil" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $('input[name="daterange"]').daterangepicker({
            opens: 'right'
        }, function (start, end, label) {
            console.log("A new date selection was made: " + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD'));
        });
    </script>
}
