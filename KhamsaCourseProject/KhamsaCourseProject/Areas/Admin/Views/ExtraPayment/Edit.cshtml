@model KhamsaCourseProject.Areas.Admin.Models.ExtraPayment

@{
    ViewData["Title"] = "Düzəliş";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Düzəliş</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-10">
        <form asp-action="Edit" asp-route-id="@ViewContext.HttpContext.Request.RouteValues["id"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Əlavə Gəlir Səbəbi</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Benefit" class="control-label">Məbləğ</label>
                <input asp-for="Benefit" type="number" class="form-control" />
                <span asp-validation-for="Benefit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BenefitDate" class="control-label">Çıxış Tarixi</label>
                <input type="date" asp-for="BenefitDate" class="form-control" />
                <span asp-validation-for="BenefitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Əlavə Məlumat</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yadda Saxla" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewContext.HttpContext.Request.RouteValues["id"]">Geri</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
