@model Sector
<style>
    .center-picture {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }
    .selected-details{
        transition:0.1s;
    }
    .selected-details:hover {
       background-color:dodgerblue;
       color:white;
    }
    a{
        text-decoration:none !important;

    }
</style>

<div class="row">
    <div class="card w-100 h-100 mw-100">
        <div class="card-header">
            <h4>@Model.Name Filialı</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-3">
                    <a asp-action="Index" asp-controller="Student" asp-area="Admin" asp-route-id="@Model.Id">
                        <div class="card shadow-sm selected-details">
                            <div class="card-body center-picture">
                                <img class="ml-auto mr-auto" width="100" height="100" src="~/admin/img/student.png" />
                                <h5 class="mt-3 text-center">
                                    Tələbələr
                                </h5>
                            </div>
                        </div>
                        </a>
                </div>
                <div class="col-3">
                    <a asp-action="Index" asp-controller="Publication" asp-area="Admin" asp-route-id="@Model.Id">
                        <div class="card shadow-sm selected-details">
                            <div class="card-body center-picture">
                                <img class="ml-auto mr-auto" width="100" height="100" src="~/admin/img/book2.png" />
                                <h5 class="mt-3 text-center">
                                    Nəşriyyat
                                </h5>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-3">
                    <a asp-action="Index" asp-controller="Exam" asp-area="Admin" asp-route-id="@Model.Id">
                        <div class="card shadow-sm selected-details">
                            <div class="card-body center-picture">
                                <img class="ml-auto mr-auto" width="100" height="100" src="~/admin/img/exam.png" />
                                <h5 class="mt-3 text-center">
                                    Imtahanlar
                                </h5>
                            </div>
                        </div>
                        </a>
                </div>
                <div class="col-3">
                    <a asp-action="Index" asp-controller="Employee" asp-area="Admin" asp-route-id="@Model.Id">
                        <div class="card shadow-sm selected-details">
                            <div class="card-body center-picture">
                                <img class="ml-auto mr-auto" width="100" height="100" src="~/admin/img/staff.png" />
                                <h5 class="mt-3 text-center">
                                    İşcilər
                                </h5>
                            </div>
                        </div>
                        </a>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-3">
                    <a asp-action="Index" asp-controller="Office" asp-area="Admin" asp-route-id="@Model.Id">
                        <div class="card shadow-sm selected-details">
                            <div class="card-body center-picture">
                                <img class="ml-auto mr-auto" width="100" height="100" src="~/admin/img/office.png" />
                                <h5 class="mt-3 text-center">
                                    Ofis
                                </h5>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-3">
                    <a asp-action="Index" asp-controller="Debt" asp-area="Admin" asp-route-id="@Model.Id">
                        <div class="card shadow-sm selected-details">
                            <div class="card-body center-picture">
                                <img class="ml-auto mr-auto" width="100" height="100" src="~/admin/img/money2.png" />
                                <h5 class="mt-3 text-center">
                                    Pul Çıxış
                                </h5>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-3">
                    <a asp-action="Benefit" asp-controller="ExtraPayments" asp-area="Admin" asp-route-id="@Model.Id">
                        <div class="card shadow-sm selected-details">
                            <div class="card-body center-picture">
                                <img class="ml-auto mr-auto" width="100" height="100" src="~/admin/img/approve.png" />
                                <h5 class="mt-3 text-center">
                                    Əlavə
                                </h5>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-3">
                    <a asp-action="UnBenefit" asp-controller="ExtraPayments" asp-area="Admin" asp-route-id="@Model.Id">
                        <div class="card shadow-sm selected-details">
                            <div class="card-body center-picture">
                                <img class="ml-auto mr-auto" width="100" height="100" src="~/admin/img/minus4.png" />
                                <h5 class="mt-3 text-center">
                                    Əlavə
                                </h5>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-footer"></div>
    </div>
</div>